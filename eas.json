{
  "cli": {
    "appVersionSource": "remote"
  },
  "build": {
    "base": {
      "env": {  
        "EAS_LOCAL_BUILD_ARTIFACTS_DIR": "./builds"
      }
    },
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "APP_VARIANT": "development"
      }
    },
    "preview": {
      "distribution": "internal",
      "environment": "preview",
      "env": {
        "APP_VARIANT": "preview"
      }
    }
  }
}